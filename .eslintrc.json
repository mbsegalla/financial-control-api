{
  "parser": "@typescript-eslint/parser",
  "extends": ["plugin:@typescript-eslint/recommended"],
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"]
  },
  "env": {
    "browser": true,
    "node": true
  },
  "ignorePatterns": ["dist"]
}
